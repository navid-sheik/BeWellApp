<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:weightSum="2">



    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        card_view:cardPreventCornerOverlap="false"
        android:layout_weight="0.3"
        android:background="@color/yellow"
        app:cardCornerRadius="2sp"

        >

        <ImageView
            android:id="@+id/ambassadorPic"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:src="@drawable/ic_add_perso"
            android:background="@color/greyButton"
            />
    </androidx.cardview.widget.CardView>




    <TextView

        android:id="@+id/userNameAmbassador"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.7"
        android:text="Navid sheikh"
        android:background="@color/greyButton"
        android:lines="1"
        android:gravity="center"
        android:textAlignment="textStart"
        card_view:ignore="RtlCompat"
        android:layout_marginStart="10dp"


        />







</LinearLayout>