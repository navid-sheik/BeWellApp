<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:weightSum="2"
    android:layout_marginBottom="10dp">



        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            card_view:cardPreventCornerOverlap="false"
            android:layout_weight="0.3"
            app:cardCornerRadius="2sp"

            >

            <ImageView
                android:id="@+id/ambassadorCoversationPic"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:src="@drawable/ic_person"
                android:background="@color/greyButton"
                />
        </androidx.cardview.widget.CardView>


        <LinearLayout
            android:id="@+id/containeMessageUsename"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.7"
            android:weightSum="2"
            android:orientation="vertical"

            >



        <TextView

            android:id="@+id/usernameConversation"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:text=""
            android:background="@color/greyButton"
            android:lines="1"
            android:gravity="center"
            android:textAlignment="textStart"
            card_view:ignore="RtlCompat"
            android:textStyle="bold"
            android:paddingLeft="10dp"

            />


        <TextView

            android:id="@+id/userNameLatestMessage"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.4"
            android:text=""
            android:background="@color/greyButton"
            android:maxLines="1"
            android:gravity="center"
            android:textAlignment="textStart"
            card_view:ignore="RtlCompat"
            android:paddingLeft="10dp"

            />
        </LinearLayout>








</LinearLayout>